<h2>ログイン</h2>
<div class = "login_form text-center ml-auto mr-auto mt-5 mb-5 w-75">
  <div class = "text-left">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email,"メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",size: "40X5" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード　　" %>
        <%= f.password_field :password, autocomplete: "current-password",size: "40X5" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "情報を記憶する" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン",class:"btn btn-primary mt-3" %>
      </div>
    <% end %>
  </div>
</div>
<div class = "mb-3">
  <%= link_to "ゲストログイン(閲覧用)", end_users_guest_sign_in_path, method: :post,class:"btn btn-info" %>
</div>
<%= render "public/shared/links" %>
