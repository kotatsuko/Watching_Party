<% if @end_user.is_deleted == false %>
  <div class = "end_user_introduction w-100 bg-light">
    <div class = "d-inline-block">
      <%= image_tag @end_user.get_end_user_image, :width => '100', :height => '100' %>
    </div>
    <div class = "d-inline-block">
      <div>
        <div class = "d-inline-block">
          <%= @end_user.name %>
        </div>
        <div class = "d-inline-block ml-3">
          <%= link_to end_user_followings_path(@end_user) do %>
            <%= @end_user.followings.count %>フォロー
          <% end %>
          <%= link_to end_user_followers_path(@end_user) do %>
            <%= @end_user.followers.count %>フォロワー
          <% end %>
          <%= link_to end_user_my_groups_path(@end_user) do %>
            <%= @end_user.groups.count %>グループ参加中
          <% end %>
        </div>
        <div class = "d-inline-block">
          <% if @end_user != @current_end_user %>
            <% if @current_end_user.following?(@end_user) %>
              <%= link_to "フォローを外す", end_user_relationships_path(@end_user.id),class:"btn btn-info", method: :delete %>
            <% else %>
              <%= link_to "フォローする", end_user_relationships_path(@end_user.id),class:"btn btn-success", method: :post %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div>
        <%= @end_user.introduction %>
      </div>
    </div>
  </div>
  <%= render "public/posts/posts_index", posts:@posts %>
<% else %>
  <h3>このユーザーは退会しました</h3>
<% end %>