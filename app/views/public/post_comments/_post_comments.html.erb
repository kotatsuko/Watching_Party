  <% post.post_comments.each do |post_comment| %>
    <div class = "border">
      <div class = "mt-3">
        <%= link_to end_user_path(post_comment.end_user) do %>
          <div class = "d-inline-block">
            <%= image_tag post_comment.end_user.get_end_user_image, :width => '50', :height => '50' %>
          </div>
          <div class = "d-inline-block">
            <%= post_comment.end_user.name %>
          </div>
        <% end %>
        <div class = "d-inline-block ml-5">
          <%= post_comment.created_at.strftime('%Y/%m/%d %H:%M') %>
        </div>
        <% if post_comment.end_user == current_end_user || post_comment.post.end_user == current_end_user %>
          <div class = "d-inline-block ml-5">
            <%= link_to "削除する", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote:true, class:"btn btn-danger" %>
          </div>
        <% end %>
      </div>
      <div class = "mt-3 text-wrap text-break">
        <%= post_comment.body %>
      </div>
    </div>
  <% end %>