  <%= form_with model: post do |f| %>
    <%= f.text_area :body, class:"input-area" %>
    <% if post.new_record? %>
      <%= f.text_field :tag_name, placeholder:"タグを追加(半角か全角スペースで区切りを入れると複数できます)" , class:"input-area" %>
    <% else %>
      <%= f.text_field :tag_name, value:post.tags.map(&:name).join(" "), placeholder:"タグを追加(半角か全角スペースで区切りを入れると複数登録できます)" , class:"input-area" %>
    <% end %>
    <% if post.new_record? %>
      <%= f.submit "投稿する",class:"btn btn-primary mt-3" %>
    <% else %>
      <%= f.submit "変更する",class:"btn btn-success  mt-3" %>
    <% end %>
  <% end %>