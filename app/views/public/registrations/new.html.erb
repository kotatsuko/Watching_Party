<h2>アカウント作成</h2>
<div class = "login_form text-center ml-auto mr-auto mt-5 mb-5 w-75">
  <div class = "text-left">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


      <div class="field">
        <%= f.label :name, "ユーザーネーム　" %>
        <%= f.text_field :name,size: "40X5" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス　" %>
        <%= f.email_field :email, autocomplete: "email",size: "40X5" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード　　　" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上",size: "40X5" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認用" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",size: "40X5" %>
      </div>

      <div class="actions">
        <%= f.submit "アカウント作成",class:"btn btn-primary mt-3" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "public/shared/links" %>
