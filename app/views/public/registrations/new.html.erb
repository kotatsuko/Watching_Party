<h2>アカウント作成</h2>
<div class = "login_form text-center ml-auto mr-auto mt-5 mb-5 w-75">
  <div class = "text-left">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "ユーザーネーム　　　　　" %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス　　　　　" %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>（<%= @minimum_password_length %> 文字以上）</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認用　　　　" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "アカウント作成",class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "public/shared/links" %>
