<div class = "starting_soon">
  <h3>もうすぐ開始</h3>
  <div class = "d-flex">
    <% @starting_soon_groups.each do |group| %>
      <div>
        <div>
          <%= image_tag group.get_group_image, :width => '100', :height => '100'  %>
        </div>
        <div>
          <%= group.name.truncate(15) %>
        </div>
        <div>
          『<%= group.title.truncate(15) %>』
        </div>
        <div>
          <%= group.viewing_time %>分間
        </div>
        <div>
          <%= group.start_time.strftime('%Y-%m-%d %H:%M') %>～
        </div>
      </div>
    <% end %>
  </div>
</div>
