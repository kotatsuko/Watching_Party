<div class = "d-inline-block">
    <%= image_tag group.get_group_image, class:'img-200-200-contain' %>
</div>
<div class = "d-inline-block", id = "group_btn<%= group.id %>">
  <%= render "public/groups/group_btn", group:group %>
</div>
<div class = "w-100 border overflow-auto", style = "height:50px; padding:12px;">
  <%= group.name %><% if group.owner_user_id == 4 %><span class = "text-success">(公式)</span><% end %>
</div>
<div class = "w-100 border overflow-auto", style = "height:90px; padding:12px;">
  <%= group.introduction %>
</div>
<div class = "w-100 border overflow-auto", style = "height:50px; padding:12px;">
  『<%= group.title %>』
</div>
<div class = "w-100 border overflow-auto", style = "height:50px; padding:12px;">
  <%= group.genre %>
</div>
<div class = "w-100 border overflow-auto", style = "height:50px; padding:12px;">
  <%= group.start_time.strftime('%Y-%m-%d %H:%M') %>～　<%= group.viewing_time %>分
</div>
<div class = "w-100 border overflow-auto", style = "height:50px; padding:12px;">
  タグ：
  <% group.tags.each do |tag| %>
    <%= link_to tag_search_path(tag.id) do %>
      <%= tag.name %>(<%= tag.groups.count %>)
    <%end %>
  <% end %>
</div>
<div class = "group_member border", style = "height:35vh">
  <h4>メンバー</h4>
  <div class = "overflow-auto", style = "height:30vh">
    <% group.end_users.each do |end_user| %>
      <div class = "mt-1">
        <div class = "d-inline-block">
          <%= link_to end_user_path(end_user) do %>
            <%= image_tag end_user.get_end_user_image, :width => '50', :height => '50' %>
          <% end %>
        </div>
        <div class = "d-inline-block">
          <%= link_to end_user_path(end_user) do %>
            <%= end_user.name %><% if end_user.id == group.owner_user_id %>【オーナー】 <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>