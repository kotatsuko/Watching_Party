<div class = "post">
  <div>
    <div>
      <%= link_to admin_end_user_path(@post.end_user) do %>
        <div class = "d-inline-block">
          <%= image_tag @post.end_user.get_end_user_image, :width => '50', :height => '50' %>
        </div>
        <div class = "d-inline-block">
          <%= @post.end_user.name %>
        </div>
      <% end %>
    </div>
    <div>
      <div class = "d-inline-block">
          <p>
            ♥<%= @post.post_favorites.count %> いいね
          </p>
      </div>
    <div class = "d-inline-block ml-3">
      <%= @post.post_comments.count %>コメント
    </div>
    <div class = "d-inline-block ml-3">
      <%= @post.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
    </div>
      <div class = "d-inline-block ml-5">
        <%= link_to "削除する", admin_post_path(@post), method: :delete, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
  <div class = "mt-3">
    <%= @post.body %>
  </div>
  <div class = "mt-5">
    タグ:
    <% @post.tags.each do |tag| %>
      <%= link_to tag_search_path(tag.id) do %>
        <%= tag.name %>(<%= tag.posts.count %>)
      <% end %>
    <% end %>
  </div>
</div>

<div class = "post_comments mt-5 pt-5 h-50">
  <div class = "post_comments_index mt-3 overflow-auto border h-100">
    <% @post_comments.each do |post_comment| %>
      <div class = "mt-3">
        <%= link_to admin_end_user_path(post_comment.end_user) do %>
          <div class = "d-inline-block">
            <%= image_tag post_comment.end_user.get_end_user_image, :width => '50', :height => '50' %>
          </div>
          <div class = "d-inline-block">
            <%= post_comment.end_user.name %>
          </div>
        <% end %>
        <div class = "d-inline-block ml-5">
          <%= post_comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        </div>
        <div class = "d-inline-block">
          <%= link_to "削除する", admin_post_admin_post_comment_destroy_path(post_comment.post,post_comment), method: :delete, class:"btn btn-danger btn-sm" %>
        </div>
      </div>
      <div class = "mt-3">
        <%= post_comment.body %>
      </div>
    <% end %>
  </div>
</div>
