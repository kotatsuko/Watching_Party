<div class = "w-100", style = "height:95vh">
  <div class = "h-50">
    <h2 class = "mb-3">注目のグループ</h2>
    <div>
      <% @pickup_groups.each do |group| %>
        <%= link_to admin_group_path(group) do %>
          <div class="d-flex align-items-start mb-3", style = "height:100px;">
            <div class = "d-inline-block">
              <%= image_tag group.get_group_image, :width => '100', :height => '100' %>
            </div>
            <div class = "d-inline-block">
              <%= group.name %>『<%= group.title %>』<br>
              <%= group.introduction %><br>
              <%= group.start_time.strftime('%Y-%m-%d %H:%M') %><br>
              <%= group.end_users.count %>参加予定
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class = "h-50">
    <h2>注目の投稿</h2>
    <div class = "h-75 d-flex align-items-start">
      <% @pickup_posts.each do |post| %>
        <div class = "d-inline-block w-25 h-75 border d-flex flex-column">
          <div>
            <%= link_to admin_end_user_path(post.end_user) do %>
              <p><%= post.end_user.name %></p>
            <% end %>
          </div>
          <div class = "w-100 text-break">
            <%= link_to admin_post_path(post) do %>
              <%= post.body %>
            <% end %>
          </div>
          <div class = "mt-auto">
            <%= post.post_favorites.count %>いいね
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

