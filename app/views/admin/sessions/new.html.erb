<h2 class = "mb-5">管理者ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, size: "60X5", class:"log_area" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, size: "60X5", class:"log_area" %>
  </div>

  <div class="actions mt-5">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

